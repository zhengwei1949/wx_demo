@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.movie-list-inner-container {
  margin: 0 10rpx 20rpx;
}

.movies-container {
  display: flex;
  flex-direction: row;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  /*display: flex;
